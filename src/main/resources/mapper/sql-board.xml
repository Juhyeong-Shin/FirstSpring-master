<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0 //EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.example.myJava.mapper.BoardMapper">
    <select id="selectBoardList" resultType="com.example.myJava.dto.BoardDto">
        <![CDATA[
        INSERT INTO t_board
        (title,
         creator_id)
        VALUES(
               #(title),
               NOW(),
               'admin'
              )
        SELECT title,
               creator_id
        FROM t_board
        WHERE deleted_yn = "N"
        ORDER BY board_idx DESC
        ]]>
    </select>
</mapper>